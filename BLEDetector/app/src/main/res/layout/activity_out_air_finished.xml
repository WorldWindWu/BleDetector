<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorBackBlue"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageButton
            android:id="@+id/detected_outdoor_back"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/backspace_white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:text="室外空气检测"
            android:textColor="@android:color/white"
            android:textSize="30sp"
        />

        <Button
            android:id="@+id/outdoor_re_detect"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/corner_rect"
            android:text="重测"
            android:textColor="@color/colorBackBlue"
            android:textSize="23sp"
        />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="90dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="60dp"
            android:background="@android:color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="125"
                android:gravity="center"
                android:text="检测完成"
                android:textColor="@color/colorBackBlue"
                android:textSize="30sp"
            />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="472">

                <ImageView
                    android:layout_width="450dp"
                    android:layout_height="300dp"
                    android:layout_centerInParent="true"
                    android:background="@color/colorBackBlue"
                />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="362">

                <LinearLayout
                    android:layout_width="450dp"
                    android:layout_height="200dp"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10">

                        <TextView
                            android:id="@+id/value_co2"
                            android:textSize="80sp"
                            android:textStyle="bold"
                            android:text="450"
                            android:textColor="@color/colorBackBlue"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/desp_co2"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:text="空气清新"
                            android:textColor="@color/colorBackBlue"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/value_co2"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/title_co2"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:text="@string/co2"
                            android:textColor="#8892A6"
                            android:layout_marginBottom="10dp"
                            android:layout_centerHorizontal="true"
                            android:layout_above="@id/value_co2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/line_xu"/>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10">

                        <TextView
                            android:id="@+id/value_pm25"
                            android:textSize="80sp"
                            android:textStyle="bold"
                            android:text="67"
                            android:textColor="@color/colorBackBlue"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/desp_pm25"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:text="污染严重"
                            android:textColor="@color/colorBackBlue"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/value_pm25"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/title_pm25"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:text="@string/pm25"
                            android:textColor="#8892A6"
                            android:layout_marginBottom="10dp"
                            android:layout_centerHorizontal="true"
                            android:layout_above="@id/value_pm25"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>